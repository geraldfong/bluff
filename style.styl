body, div, *
  box-sizing border-box


body, button
  font-family "Helvetica Neue" !important
  font-weight 100

.cardIcon
  width 21px
  height 34px
  background-image url('imgs/card-back.png')
  background-size 16px 30px
  background-position 3px 3px
  background-repeat no-repeat
  border 2px #cccccc solid
  border-radius 4px
  background-color white

body
  margin 0
  padding 0
  background-color #f5f5f5
  
  .exit
    background-image url('imgs/exit.png')
    width 30px
    height 30px
    background-repeat no-repeat
    position absolute
    right 20px
    top 20px
  .players
    height 20%
    .playerWrapper
      width 100px
      float left
      margin 38px
      position relative
      img.face
        width 60px
        height 60px
        border-radius 30px
        position absolute
        left 10px
        border solid #cccccc 1px
      .cardCount
        font-weight 200
        letter-spacing 1px
        position absolute
        left 86px
        top 42px
      .cardIconWrapper
        top 6px
        left 85px
        position absolute

      .speechBubble
        position absolute
        background-color white
        width 110px
        height 50px
        left 2px
        top 74px
        border solid #cccccc 2px
        border-radius 6px
        text-align center
        &.thinking
          border solid #666666 2px

        .speechBubbleCards
          display inline-block
          .cardIcon
            display inline-block
            margin 7px 2px
        .thinkingText
          margin-top 10px
          font-weight bold
          letter-spacing 4px
          color #777777
          display inline-block
      .speechBubble:after
        content ''
        position absolute
        left 20px
        top -12px
        border-left 15px solid transparent
        border-right 15px solid transparent
        border-bottom 15px solid white
      .speechBubble:before
        position absolute
        content ''
        left 21px
        top -13px
        border-left 14px solid transparent
        border-right 14px solid transparent
        border-bottom 14px solid #cccccc
      .thinking:before
        border-bottom 14px solid #666666

  .table
    background-color white
    height 30%
    text-align center
    .pot
      display inline-block
      margin-right 70px
      margin-top 70px

      .card
        float left
        margin-right -70px
        background-color white
        background-image url("imgs/card-back.png")
        background-size 83px 133px
        background-position 5px 5px
        background-repeat no-repeat
        border solid 2px black
        height 144px
        width 94px
        border 2px #cccccc solid
        border-radius 10px
    
  .hand
    overflow-x scroll
    height 35%

    .msgBox
      height 20%
      .msg
        letter-spacing 2px
        padding 20px 0 0 30px
        color #444444
        font-size 34px

    .cardsWrapper
      overflow-x scroll

      .cards
        height 80%
        width 300%
        padding-top 5px
        .cardWrapper
          position relative
          display inline-block
          .card
            background-color white
            font-size 40px
            font-family Garamond
            font-weight bold
            border-radius 10px
            float left
            margin-left 20px
            line-height .92
            height 143px
            width 93px
            user-select none
            -webkit-user-select none
            border 4px #777777 solid

            &.selected
              border 4px #5cb85c solid

            &.black
              color black

            &.red
              color red

            &.card1
              position absolute
              top 30px
              z-index -1
            &.card2
              position absolute
              top 60px
              z-index -2
            &.card3
              position absolute
              top 90px
              z-index -3
            .topLeft
              padding 5px 0 0 5px
            .suit
              padding 0 23px
              font-size 60px
            .bottomRight
              padding 5px 0 0 60px

    
  .actionBar
    height 15%
    width 600px
    margin 0 auto
    button
      border none
      color white
      border-radius 10px
      width 180
      height 90
      font-size 40px
      margin 25px 10px
      letter-spacing 4px
      cursor pointer
      webkit-overflow-scrolling touch
      &.call
        background-color #d9534f
      &.pass
        background-color #f0ad4e
      &.play
        background-color #5cb85c
